# Configuration du serveur
PORT=3000
NODE_ENV=development

# Base de données MongoDB
MONGODB_URI=mongodb://localhost:27017/minecraft-wiki
MONGODB_URI_TEST=mongodb://localhost:27017/minecraft-wiki-test

# JWT Secret pour l'authentification
JWT_SECRET=votre_secret_jwt_ultra_securise
JWT_EXPIRE=7d

# API Minecraft
MINECRAFT_API_KEY=votre_cle_api_minecraft

# Configuration CORS
CORS_ORIGIN=http://localhost:3000

# Stockage des fichiers
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760 # 10MB

# Options de log
LOG_LEVEL=debug

# Répertoire des assets
ASSETS_DIR=./assets
